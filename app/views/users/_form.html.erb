<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <%= bootstrap_form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Sorry, there was an error:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.email_field :email, hide_label: true, placeholder: "Enter your email..." %>
      <%= f.password_field :password, hide_label: true, placeholder: "Enter your password..." %>
      <%= f.password_field :password_confirmation, hide_label: true, placeholder: "Enter your password, again..." %>
      <%= f.submit "Let's Do It!", class: "btn btn-success btn-block" %>
      
    <% end %>
  </div>
</div><br><br>



