<!-- Display Each Quote -->
<div class="container-fluid">
  <div class="row">
  <!-- Each Quote Loop Start -->
  <% @quotes.order('updated_at DESC').each do |quote| %>
    <div class="container-fluid">
      <div class="row">

        <div class="col-sm-8">
          <div class="quote-box-wrapper clearfix">
            <div class="quote-box">
              <p class="quote-copy"><%= quote.print_quote %></p>
              <p class="quote-author-copy"><%= quote.print_author %></p>
            </div>
          </div>
        </div>

        <div class="col-sm-1">
          <div class="row">
            <%= link_to 'Edit', edit_user_quote_path(quote.user, quote), class: "btn btn-default btn-block" %>
          </div>
          <div class="row">
            <%= link_to 'Delete', user_quote_path(quote.user, quote), method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-default btn-block" %>
          </div>
        </div>
      
