<div class="container" id="modal-new-fields">
  <div class="col-sm-6 col-sm-offset-2">
    <h1 class="text-center">New Quote</h1>
    <%= bootstrap_form_for([@user, @user.quotes.build]) do |f| %>

      <%= f.text_area :body, hide_label: true, placeholder: 'Enter the quote...', class: "quote-copy" %>
      <%=  f.text_field :author, hide_label: true, placeholder: 'Enter the author...', class: "quote-copy" %>
      <div class="row">
        <div class="col-sm-8">
          <%= f.submit 'Save It', class: "btn btn-success btn-block" %>
        </div>
        <div class="col-sm-4">
          <%= link_to "Cancel", user_quotes_path, class: "btn btn-danger btn-block" %>
        </div>
      </div>

    <% end %><br><br>
  </div>
</div>